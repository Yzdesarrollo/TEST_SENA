@page "/counter"

<PageTitle>Counter</PageTitle>

<h1>Counter</h1>

<p role="status">Current count: @currentCount</p>

<button class="btn btn-info" @onclick="IncrementCount">Click me</button>

<RadzenButton Text="Hi" ButtonStyle="ButtonStyle.Info"></RadzenButton>

@code {
    private int currentCount = 0;

    private void IncrementCount()
    {
        currentCount++;
    }
}
